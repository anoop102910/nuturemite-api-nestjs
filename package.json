{
  "name": "learningnest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "dev:db:migrate": "prisma migrate dev",
    "prod:db:migrate": "dotenv -e .env.production -- prisma migrate deploy",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:prod":"dotenv -e .env.production --  node dist/main",
    "start:prod": "node dist/main",

    "dev:db:rm": "docker compose rm dev-db -s -f -v",
    "dev:db:up": "docker compose up dev-db -d",
    "dev:obs:rm": "docker compose rm dev-obs -s -f -v",
    "dev:obs:up": "docker compose up dev-obs -d",
    "dev:db:restart": "npm run dev:db:rm && npm run dev:obs:rm && npm run dev:db:up && npm run dev:obs:up && sleep 4 && npm run prisma:dev:deploy",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "dev:test:rm": "docker compose rm dev-test-db -s -f -v && docker compose rm dev-test-obs -s -f -v",
    "dev:test:up": "docker compose up dev-test-db -d && docker compose up dev-test-obs -d",
    "dev:test:restart": "npm run dev:test:rm  && npm run dev:test:up  && sleep 4 && npm run prisma:test:deploy",
    "pretest:e2e": "npm run dev:test:restart",
    "test:e2e": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "worker": "nodemon /src/consumer/worker.ts",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.9",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/websockets": "^10.3.9",
    "@prisma/client": "^5.14.0",
    "argon2": "^0.40.3",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.2.0",
    "compression": "^1.7.4",
    "dotenv-cli": "^7.4.2",
    "ioredis": "^5.4.1",
    "minio": "^8.0.0",
    "pactum": "^3.7.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.16.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
